		<!-- LOGIN MODAL -->

		<div aria-hidden="true" aria-labelledby="exampleModalCenterTitle" class="modal fade" id="loginModal" role="dialog" tabindex="-1">
			<div class="modal-dialog" role="document">
				<div class="modal-content bg-dark border border-dark">
					<div class="modal-header border border-dark">
						<h2 class="modal-title text-white" id="exampleModalLabel">LOG IN</h2>
						<button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true" style="color:white">&times;</span></button>
					</div>


					<div class="modal-body">
						<form action="login" id="loginForm" method="post" name="login">
							<h5 class="text-white text-left" id="exampleModalLabel">Username</h5>


							<div class="seperator">
								<input name="username" placeholder="username" style="width:100%" type="text">
							</div>


							<h5 class="text-white text-left" id="exampleModalLabel">Password</h5>


							<div class="seperator" style="margin-top:0%">
								<input name="password" placeholder="password" style="width:100%" type="password">
							</div>
							<span id="registerbuttons"></span>

							<div class="modal-footer border border-dark">
								<button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button> <input class="btn btn-primary" type="submit" value="Log In!">
