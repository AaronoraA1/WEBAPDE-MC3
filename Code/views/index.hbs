		<!-- LOGIN MODAL --> 
<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="loginModal" role="dialog" tabindex="-1" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center bg-light">
          <h4 class="modal-title w-100 font-weight-bold text-center">Log In</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
          <form action="login" id="loginForm" method="post" name="login">   
        <div class="modal-body bg-light border-dark m-0">
         
          <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Username</label>
            <input type="text"  name="username" class="form-control validate"> </div>
          <div class="md-form mb-2">
            <i class="fa fa-lock prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
            <input type="password" name="password" class="form-control validate"> </div>
        </div>
        <div class="modal-footer justify-content-center d-flex bg-light">
          <button class="btn btn-block btn-dark" type ="submit">Login</button>
        </div>
          </form>
      </div>
    </div>
  </div>
        
        
		<!-- NEW REGISTER MODAL -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="registerModal" role="dialog" tabindex="-1" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center bg-light">
          <h4 class="modal-title w-100 font-weight-bold text-center">Sign Up</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
          <form action="register" id="registerForm" method="post" name="register">   
        <div class="modal-body bg-light border-dark m-0">
         
          <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Username</label>
            <input type="text"  name="username" class="form-control validate"> </div>
          <div class="md-form mb-2">
            <i class="fa fa-lock prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-pass">Password</label>
            <input type="password" name="password" class="form-control validate"> </div>
        </div>
        <div class="modal-footer justify-content-center d-flex bg-light">
          <button class="btn btn-block btn-dark" type ="submit">Sign Up</button>
        </div>
          </form>
      </div>
    </div>
  </div>
               
        <!--UPLOAD MODAL-->
        
        
        <div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="uploadModal" role="dialog" tabindex="-1" >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center bg-light">
          <h4 class="modal-title w-100 font-weight-bold text-center">Upload</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
          
          <form action="upload" id="uploadForm" method="post" name="upload" enctype="multipart/form-data">   
              
              <input type="hidden" value="{{username}}" name="username">
        <div class="modal-body bg-light border-dark m-0">
         
          <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Title</label>
            <input type="text"  name="title" class="form-control validate"> 
            </div>
            <hr>
          <div class="md-form mb-2">
            <i class="fa fa-lock prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-pass">Dank Meme</label>
           <div class="seperator" style="margin-top:3% ">
                <input  type="file" name="url" id= "url" style="width:80%" accept="img/jpeg , img/png">
            </div>  
            </div>
            <hr>
            
            <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Description</label>
                <textarea rows="3"name="description" class="form-control validate" style="height: 35%"> </textarea>
            </div>
            <hr>
            
            <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Tag</label>
            <input type="text" placeholder="tag1,tag2,tag3" name="tags" class="form-control validate"> 
            </div>
            <hr>
             <div class="md-form mb-2">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label data-error="wrong" data-success="right" for="defaultForm-email">Private &nbsp; &nbsp;  </label>
            <input type="checkbox" name="private" value="1"> 
            </div>
            <hr>
            
            
        </div>
        <div class="modal-footer justify-content-center d-flex bg-light">
          <button class="btn btn-block btn-dark" type ="submit">Upload</button>
        </div>
          </form>
          
      </div>
    </div>
  </div>
        
        
