		<!-- MAIN CONTENT -->

        <div class = "wrapper" >
		<div id="main-content" >
            {{#each posts}}
				<div class="container-fluid">
					<div class="row align-self-start">
                        
                        
						<div class="col-sm-3">
							<div class="memesidebar" data-id="{{id}}">
                                
								<div class="sidebar-nav">
                                    <div class = "sidebarTitle">
									   <h2>MEMEscription</h2>
                                        <hr>
                                    </div>
                                    <div class = "sidebarDescription">
                                        {{description}}
                                    </div>
                                    <hr>
                                    <h4>@{{author}}</h4>
								</div>
							</div>
						</div>
                        
                        
						<div class="col-md-6" style= "padding-bottom: 5%">
							<div class="meme" data-id="{{id}}">
								<div class="post">
									<div class="memeSpans">
										<div class="memeHeader">
											<h3><span class="nameSpan">{{title}}</span>
											</h3>
											<span class="dateSpan"></span>

											<h6><span class="dateSpan">{{date}}</span>
											</h6>
										</div>
                                        
                                        <div class="imgContainer">
											<span class="img" id="meme1"><img height="100%" width="100%" src="/photo/{{id}}" ></span>
										</div>


										<div class="memeFooter">
											<span class="tagSpan"></span>
                                            
											<h5><span class="tagSpan">{{#each tags}}#{{this}} {{/each}}</span>
                                            
											</h5>
										</div>
									</div>
								</div>
							</div>
						</div>
                        
                        {{/each}}
					</div>
				</div>
            <hr>
			</div>
        </div>
